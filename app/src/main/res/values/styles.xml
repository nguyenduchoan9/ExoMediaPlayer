<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MediaPlayerOption">
        <item name="android:textSize">@dimen/text_size_media_player_option</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonOverlayMedia">
        <item name="android:background">@drawable/selector_text_view_bg_open_your_video</item>
        <item name="android:textColor">@drawable/selector_text_view_text</item>
        <item name="android:textSize">@dimen/textMediumSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButtonOption">
        <item name="android:background">@drawable/selector_dialog_text_view_bg</item>
        <item name="android:textColor">@drawable/selector_dialog_text_view_text</item>
        <item name="android:textSize">@dimen/textMediumSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/spaceSmall</item>
    </style>

</resources>
